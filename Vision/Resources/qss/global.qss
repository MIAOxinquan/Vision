/*窗体*/
QMainWindow {
    background: #D7E9F5;
}

/*菜单栏*/
QMenuBar {
    background:#9EC1E0;
    color: darkslategray;
    border: 1px solid #D7E9F5;
    spacing: 1px; /* spacing between menu bar items */
}
QMenuBar::item {
    padding: 2px 30px;
    background: transparent;
    border-radius: 15px;
}
QMenuBar::item:selected { /* when selected using mouse or keyboard */
    background: #D7E9F5;
    color: black;
    border: 1px solid #0A86AF;
}

/*菜单*/
QMenu {
    background: #9EC1E0;
    color: darkslategray;
    border:1px solid #0A86AF;
}
QMenu::item {
    padding: 0px 30px 0px 30px;/*上右下左*/
    height: 40px;
    border-radius: 20px;
}
QMenu::item:selected {
    padding: 0px 15px 0px 27px;
    background: #D7E9F5;
    color: black;
    border: 1px solid #0A86AF; /* reserve space for selection border */
}
QMenu::icon { /* appearance of a 'checked' icon */
    background: none;
    position: absolute;
    left: 10px;
}
QMenu::separator {
    height: 2px;
    background: #D7E9F5;
    margin-left: 35px;
    margin-right: 10px;
}
QMenu::indicator {
    width: 20px;
    height: 20px;
}

/*工具栏*/
QToolBar {
    background: #9EC1E0;
    border: 1px solid #D7E9F5;
    spacing: 1px; /* spacing between items in the tool bar */
}
QToolBar::handle:horizontal
,QToolBar::handle:vertical {
    background: #0A86AF;
    margin-right: 5px;
    margin-bottom: 5px;
    border-bottom-right-radius: 12px;
}
QToolBar::handle:horizontal { 
    margin-top: 5px;
    border-top-right-radius: 12px;
    width: 12px;
}
QToolBar::handle:vertical { 
    margin-left: 5px;
    border-bottom-left-radius: 12px;  
    height: 12px;
}
QToolBar::handle:horizontal:hover
,QToolBar::handle:vertical:hover
,QToolBar::handle:horizontal:pressed
,QToolBar::handle:vertical:pressed{
    border: 2px solid darkslategray; 
}
QToolBar::handle:horizontal:hover
,QToolBar::handle:horizontal:pressed{
    border-left: none;
}
QToolBar::handle:vertical:hover
,QToolBar::handle:vertical:pressed{
    border-top:none; 
}
QToolBar::separator:horizontal
,QToolBar::separator:vertical {
    background: #D7E9F5;
}
QToolBar::separator:horizontal{margin-top: 3px; margin-bottom: 3px; width: 1px;}
QToolBar::separator:vertical {margin-left: 3px; margin-right: 3px; height: 1px;}
