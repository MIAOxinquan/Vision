/*工具栏按钮*/
QToolButton{ /* all types of tool button */
    margin: 1px;
    width: 45px;
    border-radius: 15px; 
    background: transparent;
}
QToolButton:pressed {
    padding: 3px;
    background: #D7E9F5;
    border: 1px solid #0A86AF;
}

/*分割器*/
QSplitter::handle {
    background: #9EC1E0;
}
QSplitter::handle:pressed {
    background: #F9F8E5;
}
QSplitter::handle:horizontal {width: 4px;}
QSplitter::handle:vertical {height: 4px;}

/*切换器*/
QTabWidget::pane { /* The tab widget frame */
    border-top: #9EC1E0;
}
QTabWidget::tab-bar {
    left: 0px; /* move to the right by 5px */
}
/* Style the tab using the tab sub-control. Note that
    it reads QTabBar _not_ QTabWidget */
QTabBar::tab {
    background: #9EC1E0;
    color: darkslategray;
    border: 2px solid #0A86AF;
    border-bottom-color: #9EC1E0; /* same as the pane color */
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    min-width: 12ex;
    padding: 3px;
}
QTabBar::tab:selected
,QTabBar::tab:hover {
    background: rgb(255,255,236);
    color: black;
}
QTabBar::tab:selected {
    border-color: #0A86AF;
    border-bottom-color: #D7E9F5; /* same as pane color */
}
QTabBar::tab:!selected {
    margin-top: 6px; /* make non-selected tabs look smaller */
}
/* make use of negative margins for overlapping tabs */
QTabBar::tab:selected {
    /* expand/overlap to the left and right by 6px */
    margin-left: -6px;
    margin-right: -6px;
}
QTabBar::tab:first:selected {
    margin-left: 0; /* the first selected tab has nothing to overlap with on the left */
}
QTabBar::tab:last:selected {
    margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
}
QTabBar::tab:only-one {
    margin: 0; /* if there is only one tab, we don't want overlapping margins */
}

/*状态栏*/
QStatusBar {
    color: darkslategray;
    background: #9EC1E0;
}
